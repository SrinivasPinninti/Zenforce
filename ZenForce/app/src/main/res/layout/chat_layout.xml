<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_6dp"
    android:orientation="vertical"
    android:padding="@dimen/_6dp">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/lime_400"
        android:layout_gravity="left"
        android:visibility="visible">


        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/chat_admin" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_icon"
            android:layout_alignTop="@+id/user_icon"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/user_icon"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="SRINIVAS" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/username"
            android:layout_below="@+id/username"
            android:fontFamily="sans-serif-light"
            android:text="Report is good. Please work on 2 things" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:background="@color/blue_200"
        android:visibility="visible">


        <ImageView
            android:id="@+id/user_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/chat_admin" />

        <TextView
            android:id="@+id/username_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentRight="true"
            android:textDirection="rtl"
            android:text="SRINIVAS" />

        <TextView
            android:id="@+id/message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_right"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentRight="true"
            android:textDirection="rtl"
            android:text="Report is good. Please work on 2 things" />

    </RelativeLayout>

</LinearLayout>