<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 6, 2016 05:30 pm"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvImageNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/picture_72"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="10"
                android:textColor="@color/launch_primary_dark"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNotesNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/note_72"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="10"
                android:textColor="@color/launch_primary_dark"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvVisitNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/flag_72"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="10"
                android:textColor="@color/launch_primary_dark"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>