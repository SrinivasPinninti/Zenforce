<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white">


            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="Hyderabad Marriott Hotel and Convention Centre"
                    android:textColor="@color/launch_primary_dark"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    >

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="1 hr 30 min"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="10:30am - 12:00pm"
                        android:layout_below="@+id/duration"
                        android:textSize="14sp" />



                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_layout"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:text="Tank Bund Road, Opposite Hussain Sagar Lake  Hyderabad  500080  India  "
                android:textSize="16sp" />


            <!--  <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1.25"
                  android:background="@android:color/white">

              </RelativeLayout>-->


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray"></View>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/rl_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="4dp"
                    android:visibility="visible">


                    <ImageView

                        android:id="@+id/image"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="10 photos"
                        android:background="@color/gray"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />





                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="4dp">

                    <!--<ImageView
                        android:id="@+id/note_image"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:alpha="0.10"
                        android:background="@color/gray"
                        android:scaleType="fitXY" />-->

                    <TextView
                        android:id="@+id/notes"
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:background="@drawable/note_background"
                        android:text="Tank Bund Road, Opposite Hussain Sagar Lake  Hyderabad  500080  India"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/today_note_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/today_bg"
                        android:text="10 notes"
                        android:paddingLeft="4dp"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:padding="4dp"
                    android:visibility="gone">


                    <ImageView

                        android:id="@+id/visit"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />


                    <TextView
                        android:id="@+id/visit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
